[module/pulseaudio-sink]
type = custom/script
tail = true
format-underline = ${colors.orange}
label-foreground = ${colors.fg}
exec = pulseaudio-control --format "\$ICON_SINK \$SINK_NICKNAME" --sink-nicknames-from "device.description" --sink-nickname "bluez_output.70_CE_8C_DA_10_81.a2dp-sink: %{F#a89984}%{F-} Galaxy Buds+" --sink-nickname "bluez_output.14_3F_A6_10_80_39.a2dp-sink: %{F#a89984}%{F-} WH-1000XM4" --sink-nickname "alsa_output.usb-0b0e_Jabra_Link_370_3050756D9E4B-00.analog-stereo" --sink-nickname "alsa_output.usb-Logitech_G935_Gaming_Headset-00.analog-stereo: %{F#a89984}%{F-} Logitech G935" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi___ucm0001.hw_sofhdadsp__sink: %{F#a89984}蓼 %{F-}Speaker" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi___ucm0003.hw_sofhdadsp__sink: %{F#a89984}蓼 %{F-}Speaker" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp__sink: %{F#a89984}蓼 %{F-}Speaker" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi___ucm0003.hw_sofhdadsp_3__sink: %{F#a89984}蓼 %{F-}Output 1" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi___ucm0001.hw_sofhdadsp_3__sink: %{F#a89984}蓼 %{F-}Output 1" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp_3__sink: %{F#a89984}蓼 %{F-}Output 1" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi___ucm0003.hw_sofhdadsp_4__sink: %{F#a89984}蓼 %{F-}Output 2" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi___ucm0001.hw_sofhdadsp_4__sink: %{F#a89984}蓼 %{F-}Output 2" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp_4__sink: %{F#a89984}蓼 %{F-}Output 2" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi___ucm0003.hw_sofhdadsp_5__sink: %{F#a89984}蓼 %{F-}Output 3" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi___ucm0001.hw_sofhdadsp_5__sink: %{F#a89984}蓼 %{F-}Output 3" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp_5__sink: %{F#a89984}蓼 %{F-}Output 3" listen
click-left = pulseaudio-control next-sink
click-middle = pavucontrol &
click-right = pulseaudio-control next-sink

[module/buds]
type = custom/script
;tail = true
format-underline = ${colors.orange}
exec = ~/.config/polybar/scripts/buds.sh
;exec-if = "[[ "$(pactl list short sinks | rg RUNNING | awk '{print $2}')" == "bluez_sink.70_CE_8C_DA_10_81.a2dp_sink" ]]"
click-middle = earbuds toggle anc
click-right = earbuds toggle touchpadlock

