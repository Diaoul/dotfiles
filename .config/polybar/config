format-connected-underline = ${colors.orange}
label-connected = Connected

[module/datetime]
type = internal/date
time = "%H:%M"
date = "%Y-%m-%d"
date-alt = "%Y-%m-%d"
format-prefix = "  "
format-prefix-foreground = ${colors.fg4}
format-underline = ${colors.orange}
label = "%{A1:gsimplecal:}%date% %time%%{A}"

[module/pulseaudio]
